<h1 class="title">Appointments</h1>

<div id="appointments">
  <% @appointments.each do |appointment| %>
    <%= render appointment %>
    <p>
      <%= link_to "Show this appointment", appointment %>
    </p>
  <% end %>
</div>

<button class="button is-link is-light is-rounded">
  <%= link_to "New appointment", new_appointment_path %>
</button>
